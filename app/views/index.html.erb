<div class="upload">
  <form action=""
      method="post"
      enctype="multipart/form-data"
      class="opt-out-upload-modal"
      novalidate>
  <div class="field">
    <label for="file">
    </label>
    <input type="file" name="file" id="file" accept="text/csv" required />
  </div>

  <div class="action-buttons">
    <input class="upload-button"
           type="submit"
           value="Upload" />
  </div>
</form>
</div>
